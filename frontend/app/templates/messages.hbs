<div class="container-fluid">
  <div class="row">
    <div class="col-md-5">
      <table class="table">
        <thead>
          <tr>
            <th>Identifier</th>
            <th>Status</th>
          </>
        </thead>
        <tbody>
          {{#each message in model}}
            <tr>
              <td>
                {{link-to message.id 'messages.message' message}}
              </td>
              <td>{{ message.status }}
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-md-7 details-pane">
      {{outlet}}
    </div>
  </div>
</div>
